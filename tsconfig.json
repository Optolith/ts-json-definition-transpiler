{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "outDir": "lib"
  }
}
